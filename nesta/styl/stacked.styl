.vis--stacked
	position relative
	
	.vis__hints
		&__hint
			pointer-events none
			
			text
				font-size 10px
				text-anchor middle
				alignment-baseline after-edge
				
	.vis__graph
		&__stripe
			cursor pointer
				

.legend
	position fixed
	right 10px
	top 10px
	width 200px
	padding 10px
	background #eee
	
	font-size 12px
	
	h1
		margin 0
		font-size 14px
		
	.sector
		border-left 15px solid white
		padding-left 5px
		cursor pointer
		margin 5px 0
		
	label
		display block