.vis--forcegraph
	position absolute
	left 0
	top 0
	
	.vis__graph
		&__links
			&__link
				stroke rgb(50, 50, 50)
				opacity 0.02
			
				&.blured
					opacity 0.01
					
				&.selected
					opacity .2
					
				&.muted
					opacity 0.01
		
		&__nodes
			&__node
				cursor pointer
				
				&__bg
					fill rgba(255, 255, 255, 0)
					stroke 0
				
				&__circle
					stroke none
				
				&.blured
					.vis__graph__nodes__node__circle
						opacity .2
						fill #ccc
					
				&.muted
					.vis__graph__nodes__node__circle
						opacity .2
						fill #ccc
					
						
	.vis__hint
		pointer-events none
		
		rect
			stroke #aaa
			fill rgba(255, 255, 255, .8)
		
		text
			text-anchor start
			font-size 12px
				

	.vis__loader
		font-size 18px
		text-anchor middle
		alignment-baseline middle
		fill #000