.vis--bumpchart
	.vis__axis
		font-size 10px

		.tick
			cursor pointer
			
			&.blured
				text
					opacity .2
					
			&.selected
				text
					font-weight bold
					font-size 12px

	.vis__graph
		&__line
			cursor pointer
			
			&__line
				fill none
				stroke-width 2
			&__bg
				fill none
				stroke rgba(255, 255, 255, 0)
				stroke-width 7

			&.blured
				opacity .2
				
			&.selected
				.vis__graph__line__line
					stroke-width 4

	.vis__hints
		&__hint
			pointer-events none

			path
				stroke #000
				stroke-width 1
				fill #fff

			text
				font-size 10px


	.vis__legend
		&__bg
			stroke #444
			stroke-width 1
			fill #fff

		text
			font-size 10px