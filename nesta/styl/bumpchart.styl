.vis--bumpchart
	.vis__axis
		font-size 10px

		.tick
			&.blured
				text
					opacity .2

	.vis__graph
		&__line
			&__line
				fill none
				stroke-width 2
			&__bg
				fill none
				stroke rgba(255, 255, 255, 0)
				stroke-width 7

			&.blured
				opacity .2

	.vis__hints
		&__hint
			pointer-events none

			path
				stroke #000
				stroke-width 1
				fill #fff

			text
				font-size 10px


	.vis__legend
		&__bg
			stroke #444
			stroke-width 1
			fill #fff

		text
			font-size 10px