filter-width = 220px

.vislayout
	position relative
	width 100%
	background #fff
	border 1px solid #eee
	
	&__main
		position absolute
		top 0
		left 0
		right filter-width
		height 100%
		
		svg
			position absolute
			width 100%
			height 100%
			z-index 1
		
	&__panel
		position absolute
		top 0
		right 0
		width filter-width
		border-left 1px solid #eee
		height 100%
		overflow auto
		
	&__loading
		position absolute
		left 50%
		top 50%
		margin-left -147px
		margin-top -10px
		z-index 3
		
	&__tooltip
		display none
		position absolute
		z-index 10
		width 250px
		padding 10px
		background #f2f2f2
		border-radius 2px
		border 1px solid #ccc
		box-shadow 0 0 0px 3px rgba(50, 50, 50, .1);
		
		p
			margin 0 0 10px
			font-size 12px
		
		&__button
			padding 5px 10px
			border 1px solid #777
			display inline-block
			font-size 12px
			background #e9e9e9
			cursor pointer
			
		&__close
			position absolute
			right 5px
			top 3px
			cursor pointer