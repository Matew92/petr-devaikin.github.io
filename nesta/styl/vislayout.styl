filter-width = 220px

.vislayout
	position relative
	width 100%
	background #fff
	border 1px solid #eee
	
	&__main
		position absolute
		top 0
		left 0
		right filter-width
		height 100%
		
		svg
			position absolute
			width 100%
			height 100%
			z-index 1
		
	&__panel
		position absolute
		top 0
		right 0
		width filter-width
		border-left 1px solid #eee
		height 100%
		overflow auto
		
	&__loading
		position absolute
		left 50%
		top 50%
		margin-left -147px
		margin-top -10px
		z-index 3