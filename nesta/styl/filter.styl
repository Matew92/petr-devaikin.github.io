.filter
	position fixed
	right 5px
	top 5px
	bottom 5px
	overflow auto
	width 200px
	padding 10px
	background #fff
	border 1px solid #eee
	z-index 100
	
	&__group
		font-size 12px
		margin-bottom 20px
		overflow hidden
		
		h1
			margin 0 0 5px
			font-size 14px
			text-transform uppercase
			
		select
			width 200px
			
		&__option
			display block
			padding 0
			
		&__bubble-sample
			position relative
			float left
			text-align center
			
			span
				display block
			
			&__bubble
				display inline-block
				border-radius 50%
				background #1f77b4
				opacity .9
				
		&__color-sample
			position relative
			float left
			border-top 15px solid #fff
			
			&__tick
				font-size 10px
				
				&--center
					text-align center
					
		&__samples
			margin 0
			padding 0
			border-spacing 0
			
			&__sample
				vertical-align middle
				width 30px
				
			&__desc
				vertical-align middle
				padding-left 5px
				
				&--hint
					font-style italic
					color #888
					padding-top 4px
					padding-left 0