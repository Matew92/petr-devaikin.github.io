.tooltip
	display none
	position absolute
	z-index 1000
	width 250px
	padding 10px
	background #f2f2f2
	border-radius 2px
	border 1px solid #ccc
	box-shadow 0 0 0px 3px rgba(50, 50, 50, .1);
	
	-webkit-transition left .5s, top .5s
	transition left .5s, top .5s
	
	p
		margin 0 0 10px
		font-size 12px
	
	&__button
		padding 5px 10px
		border 1px solid #777
		display inline-block
		font-size 12px
		background #e9e9e9
		cursor pointer
		
		&.disabled
			pointer-events: none;
			opacity .3
		
	&__close
		position absolute
		right 5px
		top 3px
		cursor pointer